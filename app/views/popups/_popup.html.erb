if($('#popup').length == 0) {
  $('body').prepend("<%= j render 'popups/template' %>")
}

$('.modal-body').html("<%= j render render_path, locals %>");
$('.modal-title').html("<%= j title %>")
$('#popup').modal('show') 
$('#popup').attr('class', "modal <%= 'popups-' + (render_path.gsub! '/', '-') %>")